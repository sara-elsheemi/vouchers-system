modules = ["go", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Go Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Frontend"

[[workflows.workflow]]
name = "Go Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "go run main.go"
waitForPort = 5000

[[workflows.workflow]]
name = "Web Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npm run dev"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "go run main.go"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
