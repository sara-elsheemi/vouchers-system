  "repository": {
    "type": "git",
    "url": "https://github.com/4SaleTech/web-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/4SaleTech/web-design-system/issues"
  },
  "homepage": "https://github.com/4SaleTech/web-design-system#readme"
}
